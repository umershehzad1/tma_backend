{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness":{
        "noUnusedVariables":{
          "level": "error"
                  }
      }
    },
    "ignore": []
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "typescript"
  },
  
  "formatter": {
    "formatWithErrors": true
  }
}
